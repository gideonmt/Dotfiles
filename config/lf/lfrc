# Previewer
set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

set icons true

# Basic Settings
set hidden false
set ignorecase true
set icons true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}

cmd setwallpaper ${{
    cp "$f" ~/.config/wall.jpg
    xwallpaper --zoom "$f"
    betterlockscreen -u "$f" --fx
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Trash bindings
cmd trash ${{
    mv "$f" ~/.trash
}}

cmd force_delete ${{
  rm -rf "$f"
}}

cmd open_terminal ${{
  if [ -d "$f" ]; then
    open -a Kitty "$f"
  else
    open -a Kitty "$(dirname "$f")"
  fi
}}

cmd move_to_dir ${{
  printf "Move $f to: "
  read ans
  mv "$f" "$ans"
  printf "mv \"$f\" \"$ans\""
}}

# Bindings
map d
map m

map oc $codium "$f"
map op $open -a Preview "$f"
map ot open_terminal
map ov $nvim "$f"

map au unarchive
map ae $wine "$f"

map . set hidden!
map dd trash
map dD force_delete
map v paste
map x cut
map c copy
map s select
map <enter> open
map R reload
map mf mkfile
map md mkdir
map bg setwallpaper
map C clear
map mv move_to_dir

# Movement
map gd cd ~/Desktop
map gD cd ~/Documents
map gg cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/.config
map gt cd ~/.Trash
